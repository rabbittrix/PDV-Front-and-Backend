@using Model.Entity
@model List<Cliente>
@{
    ViewBag.Title = "Buscar Por Código";
}
    <div class="panel panel-default">
        <div class="panel-heading">Buscar Clientes no Sistema</div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Cliente por:</h2>
                    <fieldset>
                        <div class="row" style="padding-bottom:8px;">   
                            <div class="form-group col-md-3">
                                @Html.Label("Código", new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBox("txtcliente", null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-3">
                                @Html.Label("Nome", new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBox("txtnome", null, new { @class = "form-control" })
                                </div>
                            </div>                            
                            <div class="form-group col-md-3">
                                @Html.Label("CPF", new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.TextBox("txtcpf", null, new { @class = "form-control", @type = "number" } )
                                </div>
                            </div>
                                               
                        </div> 
                    </fieldset>
                </div>

                <input class="btn btn-primary btn-lg" type="submit" value="Buscar" />
            }
         </div>
    </div>    

<table class="table table-striped">
    <tr>
        <th>Código</th>
        <th>Nome</th>
        <th>CPF</th>
        <th>Endereço</th>
        <th>Telefone</th>
        <th colspan="3">Operações</th>
    </tr>
    @foreach (var objCliente in Model)
    {
        <tr>
            <th>@objCliente.IdCliente</th>
            <th>@objCliente.Nome</th>
            <th>@objCliente.Cpf</th>
            <th>@objCliente.Endereco</th>
            <th>@objCliente.Telefone</th>
            <td><a class="btn btn-success" href="~/Cliente/Find/@objCliente.IdCliente"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td><a class="btn btn-info" href="~/Cliente/Update/@objCliente.IdCliente"><span class="fa fa-edit"></span></a></td>
            <td><a class="btn btn-danger" href="~/Cliente/Eliminar/@objCliente.IdCliente"><span class="fa fa-book"></span></a></td>

        </tr>
    }
    <tr></tr>
</table>
