@model List<Model.Entity.Cliente>
@{
    ViewBag.Title = "Lista de Clientes";
}
<a href="">Relatórios</a>
<h2 class="text-center text-success">Lista de Clientes</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Cliente/Create">Novo</a>
    <a class="btn btn-info" href="~/Cliente/BuscarClientes">Buscar</a>    
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Código</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Endereço</th>
            <th>Telefone</th>
            <th colspan="3">Operações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objCliente in Model)
        {
            <tr>

                <td>@objCliente.IdCliente</td>
                <td>@objCliente.Nome</td>
                <td>@objCliente.Cpf</td>
                <td>@objCliente.Endereco</td>
                <td>@objCliente.Telefone</td>
                <td><a class="btn btn-success" href="~/Cliente/Find/@objCliente.IdCliente"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="~/Cliente/Update/@objCliente.IdCliente"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/Cliente/Eliminar/@objCliente.IdCliente"><span class="fa fa-book"></span></a></td>
            </tr>
        }
    </tbody>

</table>

