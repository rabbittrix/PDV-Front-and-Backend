@model Model.Entity.ModoPago
@{
    ViewBag.Title = Model.Nome;
}

<ol class="breadcrumb">
    <li><a href="~/">Modo de Pagamento</a></li>
    <li class="active">@(Model.Nome)</li>

</ol>

<div class="panel panel-default">
    <div class="panel-heading">Informação</div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Código</dt>
            <dd>@Model.NumPago</dd>

            <dt>Nome</dt>
            <dd>@Model.Nome</dd>

            <dt>Descrição</dt>
            <dd>@Model.Outros</dd>
        </dl>
    </div>
    <div class="form-actions">
        |@Html.ActionLink("Voltar a Lista", "Index")
    </div>
</div>


