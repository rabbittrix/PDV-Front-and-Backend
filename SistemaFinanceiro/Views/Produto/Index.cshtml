


@model List<Model.Entity.Produto>
@{
    ViewBag.Title = "Lista de Produto";
}


<h2 class="text-center text-success">Lista de Produtos</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Produto/Create">Novo</a>
<a style="float:right;" class="btn btn-success" href="~/Relatorios/frmRelatorioProduto.aspx" target="_blank">Imprimir Relatório</a>
    </div>

<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Código</th>
            <th>Descrição</th>
            <th>Preço Unitário</th>
            <th>Categoria</th>
            <th colspan="3">Operações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objProduto in Model)
        {
            <tr>
                <td>@objProduto.IdProduto</td>
                <td>@objProduto.Nome</td>
                <td>@objProduto.PrecoUnitario</td>
                <td>@objProduto.Categoria</td>
                <td><a class="btn btn-success" href="~/Produto/Find/@objProduto.IdProduto"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td><a class="btn btn-info" href="~/Produto/Update/@objProduto.IdProduto"><span class="fa fa-edit"></span></a></td>
                <td><a class="btn btn-danger" href="~/Produto/Delete/@objProduto.IdProduto"><span class="fa fa-remove"></span></a></td>
                
            </tr>
        }
    </tbody>

</table>



